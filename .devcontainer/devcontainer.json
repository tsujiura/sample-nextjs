{
  "name": "node22",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "remoteUser": "node",
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "openai.chatgpt",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ]
    }
  },
  "runArgs": [
    "--shm-size=1g"
  ],
  "forwardPorts": [3000, 9222],
  "portsAttributes": {
    "9222": { "label": "Chrome DevTools (container)", "onAutoForward": "openBrowser" }
  },
  "postAttachCommand": "bash -lc 'setsid nohup ${containerWorkspaceFolder}/.devcontainer/start-chromium.sh >/tmp/chromium-devtools.log 2>&1 < /dev/null & disown; true'"
}
